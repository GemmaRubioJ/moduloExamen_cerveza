         action="ingrediente_action"
          sequence="10"/>
        <menuitem
         id="empaquetado" 
         name="Empaquetado" 
         parent="empaquetado.main_menu" 
         action="empaquetado_action"
          sequence="10"/>
        <menuitem
         id="distribuidor" 
         name="Distribuidores" 
         parent="distribuidor.main_menu" 
         action="distribuidor_action"
          sequence="10"/>
</odoo>
